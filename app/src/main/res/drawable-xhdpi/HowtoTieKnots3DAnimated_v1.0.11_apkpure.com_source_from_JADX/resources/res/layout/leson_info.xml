<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/step_image_height"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/step_image_margintop"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/favorites_bg"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="top|right|center_vertical|center_horizontal|center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_edges"
        android:gravity="center"
        android:text="" />

    <TextView
        android:id="@+id/process_bg"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="top|left|center_vertical|center_horizontal|center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edges"
        android:gravity="center"
        android:text="" />

    <ImageButton
        android:id="@+id/favorite"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="top|right|center_vertical|center_horizontal|center"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/star_empty"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/process"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="top|left|center_vertical|center_horizontal|center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/process"
        android:gravity="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/step_textblock_height"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="@dimen/step_textblock_marginbottom"
        android:background="@drawable/rounded_edges"
        android:gravity="bottom|center_vertical|center_horizontal|center"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:paddingRight="10dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="bottom|center_vertical|center_horizontal|center"
            android:shadowColor="#777777"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="@dimen/step_text_size"
            android:textStyle="italic" />
    </ScrollView>

    <ImageButton
        android:id="@+id/begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_vertical|center_horizontal|center"
        android:layout_marginBottom="@dimen/step_button_marginbottom"
        android:background="@drawable/button_begin" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_vertical|center_horizontal|center"
        app:adSize="SMART_BANNER"
        app:adUnitId="ca-app-pub-4372843726984628/8868486196" />
</FrameLayout>
